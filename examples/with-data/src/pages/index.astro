---
import { Image } from 'astro:assets';
import { getEntryBySlug, getEntry } from 'astro:content';

const welcomePost = await getEntryBySlug('blog', 'welcome');
const { Content } = await welcomePost.render();
const author = await getEntry(welcomePost.data.author);
const banner = await getEntry(welcomePost.data.banner);
const relatedPosts = await Promise.all(welcomePost.data.relatedPosts!.map((p) => getEntry(p)));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<Image {...banner.data} />
		<p>{author.data.name}</p>
		<Content />
		<h2>Related posts</h2>
		<ul>
			{
				relatedPosts.map((post) => (
					<li>
						<a href={`/blog/${post.slug}`}>{post.data.title}</a>
					</li>
				))
			}
		</ul>
	</body>
</html>
